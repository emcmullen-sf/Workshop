        <label>Serial Number not available message</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignmentItems>
            <assignToReference>errorMessage</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>The Serial Number is not available on the Asset record</stringValue>
            </value>
        </assignmentItems>
    </assignments>
    <assignments>
        <name>Set_Success_Boolean</name>
        <label>Set Success Boolean</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignmentItems>
            <assignToReference>isSuccess</assignToReference>
            <operator>Assign</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </assignmentItems>
    </assignments>
    <decisions>
        <description>Checks if the Asset is linked to the case</description>
        <name>Asset_is_linked_check</name>
        <label>Asset is linked check</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnector>
            <targetReference>Asset_not_linked_message</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Asset is not linked</defaultConnectorLabel>
        <rules>
            <name>Asset_is_linked</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_Case_Record.AssetId</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Get_related_Asset_record</targetReference>
            </connector>
            <label>Asset is linked</label>
        </rules>
    </decisions>
    <decisions>
        <name>Asset_Serial_Number_Available</name>
        <label>Asset Serial Number Available</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnector>
            <targetReference>Serial_Number_not_available_message</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Serial Number NOT Available</defaultConnectorLabel>
        <rules>
            <name>Serial_Number_Available</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_related_Asset_record.SerialNumber</leftValueReference>
                <operator>IsBlank</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Get_Critical_Instability_Events</targetReference>
            </connector>
            <label>Serial Number Available</label>
        </rules>
    </decisions>
    <decisions>
        <name>Found_Critical_Instability_Events</name>
        <label>Found Critical Instability Events?</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnector>
            <targetReference>Set_Success_Boolean</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Critical Stability Events Found</defaultConnectorLabel>
        <rules>
            <name>No_Critical_Stability_Events_Found</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>criticalInstabilityEvents</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>criticalInstabilityEvents</leftValueReference>
                <operator>IsEmpty</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>No_Event_Records_found_message</targetReference>
            </connector>
            <label>No Critical Stability Events Found</label>
        </rules>
    </decisions>
