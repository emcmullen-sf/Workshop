            </value>
        </assignmentItems>
    </assignments>
    <assignments>
        <name>No_Event_Records_found_message</name>
        <label>No Event Records found message</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignmentItems>
            <assignToReference>errorMessage</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>NO Router Critical Instability Events were found for this Case and Asset</stringValue>
            </value>
        </assignmentItems>
    </assignments>
    <assignments>
